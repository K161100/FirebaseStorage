<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abuturab.FirebaseRecyclerviewWebview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Epedia"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Share"></activity>
        <activity android:name=".Info" />
        <activity android:name=".Feedback" />
        <activity android:name=".Rate" />
        <activity
            android:name=".NavigationBar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ItemActivity" />
        <activity
            android:name=".ItemWebView"
            android:label="@string/title_activity_news_web_view"
            android:parentActivityName=".ItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abuturab.FirebaseRecyclerviewWebview.ItemActivity" />
        </activity>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>